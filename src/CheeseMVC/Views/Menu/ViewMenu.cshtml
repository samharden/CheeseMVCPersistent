@model CheeseMVC.ViewModels.ViewMenuViewModel

@{
    ViewBag.Title = @Model.Menu.Name;
}

<h2>Menu: @Model.Menu.Name</h2>

<ul>
    @foreach (var item in Model.Items)
    {
        <li>@item.Cheese.Name</li>
    }
</ul>

<a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID">Add a cheese to this menu!</a>